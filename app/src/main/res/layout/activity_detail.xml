<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.exam.myapp.ui.pokemon_detail.PokemonDetailViewModel" />

       </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/pokemon_placeholder2"
            app:imageBackgroundUrl="@{viewModel.pokemonDetail.sprites.frontDefault}" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:shadowRadius="5"
            android:shadowColor="@color/white"
            android:onClick="@{() -> viewModel.onBack()}"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_alignTop="@id/imgBack"
            android:layout_toEndOf="@id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.pokemonDetail.nameString}"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="bold"
            android:shadowRadius="5"
            android:onClick="@{() -> viewModel.onBack()}"
            tools:text="Pokemon"
            android:shadowColor="@color/white"/>

        <LinearLayout
            android:id="@+id/llDetails"
            android:background="@drawable/curved_top_background"
            android:padding="20dp"
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgPokemon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_header_text_size"
                android:textStyle="bold"
                android:shadowColor="@color/white" />

            <LinearLayout
                android:id="@+id/llTypes"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.heightString}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="1.0 M" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.weightString}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="1 KG" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Experience"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.experience}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HP"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.getStatsByName(`hp`)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attack"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.getStatsByName(`attack`)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Defense"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.getStatsByName(`defense`)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="100" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speed"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.getStatsByName(`speed`)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="100" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>