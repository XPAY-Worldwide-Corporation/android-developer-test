<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.exam.myapp.ui.pokemon_detail.PokemonDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/pokemon_placeholder2"
            app:imageBackgroundUrl="@{viewModel.pokemonDetail.sprites.frontDefault}"
            android:contentDescription="@string/content"/>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:shadowRadius="5"
            android:shadowColor="@color/white"
            android:onClick="@{() -> viewModel.onBack()}"
            android:src="@drawable/arrow_back"
            android:contentDescription="@string/content"/>

        <TextView
            android:layout_alignTop="@id/imgBack"
            android:layout_toEndOf="@id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="bold"
            android:shadowRadius="5"
            android:onClick="@{() -> viewModel.onBack()}"
            android:shadowColor="@color/white"/>

        <LinearLayout
            android:id="@+id/llDetails"
            android:background="@drawable/curved_top_background"
            android:padding="20dp"
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgPokemon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{viewModel.pokemonDetail.nameString}"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_header_text_size"
                android:textStyle="bold"
                android:shadowColor="@color/white"
                tools:text="@string/info"/>

            <LinearLayout
                android:id="@+id/llTypes"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/height"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.heightString}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="1.0 M" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/weight"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.pokemonDetail.weightString}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    tools:text="1 KG" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/exp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:progressBarColor="@{@color/exp}"
                        android:progress="@{viewModel.pokemonDetail.experience}"
                        android:max="1000"
                        android:scaleY="12"
                        tools:progress="200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@{viewModel.pokemonDetail.experiencePercent}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        tools:text="100/1000" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/hp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:progressBarColor="@{@color/hp}"
                        android:progress="@{viewModel.pokemonDetail.getStatsByName(`hp`)}"
                        android:max="270"
                        android:scaleY="12"
                        tools:progress="200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@{viewModel.pokemonDetail.getStatsTextByName(`hp`)}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        tools:text="100/270" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/attack"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:progressBarColor="@{@color/attack}"
                        android:progress="@{viewModel.pokemonDetail.getStatsByName(`attack`)}"
                        android:max="270"
                        android:scaleY="12"
                        tools:progress="200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@{viewModel.pokemonDetail.getStatsTextByName(`attack`)}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        tools:text="100/270" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/defense"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:progressBarColor="@{@color/defense}"
                        android:progress="@{viewModel.pokemonDetail.getStatsByName(`defense`)}"
                        android:max="270"
                        android:scaleY="12"
                        tools:progress="200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@{viewModel.pokemonDetail.getStatsTextByName(`defense`)}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        tools:text="100/270" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/speed"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:progressBarColor="@{@color/speed}"
                        android:progress="@{viewModel.pokemonDetail.getStatsByName(`speed`)}"
                        android:max="270"
                        android:scaleY="12"
                        tools:progress="200" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@{viewModel.pokemonDetail.getStatsTextByName(`speed`)}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        tools:text="100/270" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>